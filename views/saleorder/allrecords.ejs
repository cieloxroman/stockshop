<h1 style="font-size:45px; font-family:Verdana, Geneva, Tahoma, sans-serif; color:white; font-style:italic; position: relative; left:5%">Sale Orders</h1>
<% if (allrecs.length > 0) {%>
    <table border="1">
    <tr>
    <th>Order ID</th>
    <th>Customer ID</th>
    <th colspan="3">Actions</th>
    </tr>
    <% allrecs.forEach((recref, index)=> {%>
    <tr>
    <td><%= recref.order_id %></td>
    <td><%= recref.customer_id %></td>
    <td><a  class = "button1" href='/saleorder/<%= recref.order_id %>/show'> 
    Details</a></td>
    <td><a class = "button1"  href='/saleorder/<%= recref.order_id %>/edit'>Edit</a></td>
    <td><a  class = "button1" href='/saleorder/<%= recref.order_id %>/delete' 
    onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
    </table>
    <% } else { %>
    <p>Not Records Available</p>
    <% } %>
    <p> <a  class = "button1" href='/saleorder/addrecord'>Add New</a> </p>