<% if (allrecs.length > 0) {%>
    <table border="1">
    <tr>
    <th>Address</th>
    <th>Location ID</th>
    <th colspan="3">Actions</th>
    </tr>
    <% allrecs.forEach((recref, index)=> {%>
    <tr>
    <td><%= recref.address %></td>
    <td><%= recref.location_id %></td>
    <td><a href='/locations/<%= recref.location_id %>/show'> 
    Details</a></td>
    <td><a href='/locations/<%= recref.location_id %>/edit'>Edit</a></td>
    <td><a href='/locations/<%= recref.location_id %>/delete' 
    onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
    </table>
    <% } else { %>
    <p>Not Records Available</p>
    <% } %>
    <p> <a href='/locations/addrecord'>Add New</a> </p>