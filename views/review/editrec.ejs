<h1> Edit Supplier Info</h1>
<form action="/review/save" method="post">
<input type="hidden" name="review_id" value="<%= onerec.review_id %>" >
<table>
<tr> <td> Review Date: </td> <td> <input type="date" name="reviewdate" value="<%= onerec.reviewdate %>" required> </td> </tr>
<tr> <td> Rating: </td> <td> <input type="number" name="rating" max="10" value="<%= onerec.rating %>" required> </td> </tr>
<tr> <td> Comments: </td> <td> <textarea name="comments" rows="10" cols="30"><%= onerec.comments %></textarea> </td> </tr>
</table>
<button type="submit">Save</button>
</form>