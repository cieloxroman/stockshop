<h1 style="font-size:45px; font-family:Verdana, Geneva, Tahoma, sans-serif; color:white; font-style:italic; position: relative; left:5%">Promotion Records</h1>
<% if (allrecs.length > 0) {%>
    <table border="1">
    <tr>
    <th>Promotion ID</th>
    <th>Promotion Title</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Discount Rate</th>
    <th colspan="3">Actions</th>
    </tr>
    <% allrecs.forEach((recref, index)=> {%>
    <tr>
    <td><%= recref.promotion_id %></td>
    <td><%= recref.promotitle %></td>
    <td><%= recref.startdate %></td>
    <td><%= recref.enddate %></td>
    <td><%= recref.discountrate %></td>
    <td><a  class = "button1" href='/promotion/<%= recref.promotion_id %>/show'> 
    Details</a></td>
    <td><a  class = "button1"  href='/promotion/<%= recref.promotion_id %>/edit'>Edit</a></td>
    <td><a  class = "button1" href='/promotion/<%= recref.promotion_id %>/delete' 
    onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
    </table>
    <% } else { %>
    <p>Not Records Available</p>
    <% } %>
    <p> <a  class = "button1" href='/promotion/addrecord'>Add New</a> </p>