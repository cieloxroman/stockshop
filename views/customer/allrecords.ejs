<h1 style="font-size:45px; font-family:Verdana, Geneva, Tahoma, sans-serif; color:white; font-style:italic; position: relative; left:5%">Customers</h1>
<% if (allrecs.length > 0) {%>
    <table border="1">
    <tr>
    <th>Customer ID</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Is Admin?</th>
    <th colspan=2>Actions</th>
    </tr>
    <% allrecs.forEach((recref, index)=> {%>
    <tr>
    <td><%= recref.customer_id %></td>
    <td><%= recref.firstname %></td>
    <td><%= recref.lastname %></td>
    <td><%= recref.isadmin %></td>
    <td><a class = "button1" href='/customer/<%= recref.customer_id %>/show'> Details</a></td>
    <td><a class = "button1" href='/customer/<%= recref.customer_id %>/edit'>Edit</a></td>
    <td><a class = "button1" href='/customer/<%= recref.customer_id %>/delete' 
    onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    <td>
        <form action="/customer/makeadmin" method="post">
            <input  class = "button1" type="hidden" name="customer_id" value="<%= recref.customer_id %>">
            <input  class = "button1"  type="submit" value="Make Admin">
        </form>
    </td>
    <td>
        <form action="/customer/removeadmin" method="post">
            <input  class = "button1"  type="hidden" name="customer_id" value="<%= recref.customer_id %>">
            <input  class = "button1" type="submit" value="Remove Admin">
        </form>
    </td>
    </tr>
    <% }); %>
    </table>
    <% } else { %>
    <p>Not Records Available</p>
    <% } %>
    <p> <a  class = "button1"  href='/customer/addrecord'>Add New</a> </p>